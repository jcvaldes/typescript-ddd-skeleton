  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug tests",
      "request": "launch",
      "runtimeArgs": ["run-script", "test"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "console": "integratedTerminal"
    },
    {
      "name": "e2e",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/cucumber/bin/cucumber-js",
      "args": ["${workspaceRoot}/tests/apps/mooc/backend/features/courses/*.feature", "--tags", "@debug"]
    }
  ]
}
